

body{
margin:0;
padding:0;
line-height: 1.5em;
text-align:center;
margin:0 auto;
font-family:arial,sans-serif;
font-size:11px;
}

b{font-size: 110%;}
em{color: red;}


#topsection{
background: url(../images/topTile.gif) repeat-x;
height: 90px; /*Height of top section*/
}

#links{
padding-top:35px;
}

#links a{
color:#555;
font-weight: bold;
text-decoration:none;
font-size:.8em;
}

#links a:hover{
color:#8c8c8c;
background:none;
}

#topsection #header{
width: 80%;
margin:0 auto;
text-align:center;
min-width: 1000px
}

#contentwrapper{
width: 80%;
text-align:center;
margin:0 auto;
min-width: 1000px
}

#contentcolumn{
text-align:left;
}

#footer{
clear: left;
width: 80%;
background: #555;
color: #FFF;
text-align: center;
min-width: 1000px;
margin: 0 auto;
}

#footer a{
color: #FFF;
text-decoration: none;
font-weight:bold;
}

.innertube{
margin: 10px; /*Margins for inner DIV inside each column (to provide padding)*/
margin-top: 0;
}

